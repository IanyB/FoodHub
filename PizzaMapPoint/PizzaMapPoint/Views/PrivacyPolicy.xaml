<UserControl
    x:Class="PizzaMapPoint.Views.PrivacyPolicy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Margin="0,1,0,-1">

    <Grid Background="#555555">
        <StackPanel Margin="20,10,0,0">
            <Image Source="/Assets/home-logo.png" Stretch="Uniform" HorizontalAlignment="Right" Height="90" Margin="-5,0,0,0"/>
            <TextBlock Text="Privacy Policy" Style="{StaticResource TitleTextStyle}" Foreground="#DBEAF9"/>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" FontSize="16" Text="This application does not explicitly or share any personal information. Your IP address (and other data provided by the OS during a web request) may be logged by the web sites providing the data for this application and used in accordance with the privacy policy of the parties providing and controlling those sites." Foreground="#DBEAF9"/>
            <TextBlock FontSize="16" Foreground="#DBEAF9">http://foodhub.ibashev.com/</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
